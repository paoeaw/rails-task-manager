<div class="container">
  <h1 class="text-center m-3">New task</h1>
  <div class="form py-4 border-bottom mb-4">
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-info'%>
    <% end %>
  </div>

  <%= link_to "Back to list", tasks_path %>
</div>
